

<main>


  <div class="album py-5 bg-light">
    <div class="container">

      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">


        <% Listing.all.each do |list|  %>
        <div class="col">
          <div class="card shadow-sm">

            <%= image_tag(list.pictures_as_thumbnails[0], style: "bd-placeholder-img card-img-top width: 100% height: 225") %>
            <div class="card-body">
              <p class="card-text"><%= list.title.truncate(160) %></p>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <button type="button" class="btn btn-sm btn-outline-secondary">View</button>
                  <button type="button" class="btn btn-sm btn-outline-secondary">Interested</button>
                  <button type="button" class="btn btn-sm btn-outline-secondary">Flag</button>
                  <button type="button" class="btn btn-sm btn-outline-secondary">Share</button>
                </div>
                <small class="text-muted">9 mins</small>
              </div>
            </div>
          </div>
        </div>
        <% end %>


      </div>
    </div>
  </div>

</main>
