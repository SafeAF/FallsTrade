<h1>Comments by <%= @user.email %></h1>
<% @comments.each do |comment|  %>

     <div class="card w-70 mt-3">

          <div class="row">
            <div class="col-12">
              <h5 class="card-title card-headline">
                 <%= link_to "#{Listing.find(comment.listing_id).title.truncate(70)}",
                    listing_url(listing_id: comment.listing_id) %>
            </div>
          </div>

          <div class="row">
            <div class="col-12">
              <p class="card-text"><%= link_to "#{comment.body.truncate(370)}",
                comment_path(listing_id: comment.listing_id) %></p>
            </div>
          </div>




	</div>


<% end %>
