<div id="<%= dom_id listing %>">
  <p>
    <strong>Title:</strong>
    <%= listing.title %>
  </p>

  <p>
    <strong>Category:</strong>
    <%= listing.category %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= listing.description %>
  </p>

  <p>
    <strong>Location:</strong>
    <%= listing.location %>
  </p>

  <p>
    <strong>Price:</strong>
    <%= listing.price %>
  </p>

<% listing.pictures.each do |picture| %>
<%= image_tag picture %>
<% end %>


  <h6><%= pluralize(listing.views, "view") %></h6>

</div>
